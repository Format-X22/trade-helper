mixin amountInput
    .input-group&attributes(attributes)
        span.input-group-text.add-task-label-top Fund amount
        input.form-control(name='fundAmount', type='number', step='0.01', inputmode='decimal')

mixin decimalInput(title, name)
    .input-group&attributes(attributes)
        span.input-group-text.add-task-label= title
        input.form-control(name=name, type='number', step='0.01', inputmode='decimal')

mixin passwordInput(title, name)
    .input-group&attributes(attributes)
        span.input-group-text.add-task-label= title
        input.form-control(name=name, type='password')

mixin timeInput(title, name)
    .input-group&attributes(attributes)
        span.input-group-text.add-task-label= title
        input.form-control(name=name, type='datetime-local')

mixin cancel-x-button
    button.btn.btn-danger&attributes(attributes).
        <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            fill='currentColor'
            class='bi bi-x'
            viewBox='0 0 16 16'
        >
            <path
                d='M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z'
            ></path>
        </svg>

mixin circle-icon
    span&attributes(attributes).
        <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            fill='currentColor'
            class='bi bi-circle-fill'
            viewBox='0 0 16 16'
        >
            <circle cx='8' cy='8' r='8'></circle>
        </svg>

mixin order-marker(target)
    td
        if target.isOpen
            +circle-icon.text-success
        else
            +circle-icon.text-muted
